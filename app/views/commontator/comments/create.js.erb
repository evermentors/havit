<%= render :partial => 'commontator/threads/show',
           :locals => { :thread => @thread,
                        :user => @user,
                        :page => @thread.new_comment_page(@per_page),
                        :per_page => @per_page } %>

<% unless @new_comment.nil? %>
  $("<%= @modal_class %> #thread_<%= @thread.id %>_new_comment_form_div").html("<%= escape_javascript(
    render :partial => 'form',
           :locals => { :comment => @new_comment,
                        :thread => @thread,
                        :per_page => @per_page }) %>");
<% else %>
  $("<%= @modal_class %> #thread_<%= @thread.id %>_new_comment_form_div").hide();

  $("<%= @modal_class %> #thread_<%= @thread.id %>_new_comment_link_div").fadeIn();
<% end %>

$("<%= @modal_class %> #comment_<%= @comment.id.to_s %>_div").hide().fadeIn();
$("<%= @modal_class %> #comment_<%= @comment.id.to_s %>_actions_span > a").tooltip({container: 'body'});

<%= javascript_proc %>
