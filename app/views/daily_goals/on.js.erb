$('.status-goal > .goal-description').text("<%== @description %>".replace(/ nl /g, '\n'))
$('.next-daily-goal-input').val("<%== @tomorrow_goal %>")
if ("<%= @today_goal %>" == 'none') {
  $('.new-status-form .modify-goal-link').addClass('hidden')
}
else {
  $('.new-status-form .modify-goal-link').removeClass('hidden')
  $('.new-status-form .btn-confirm').attr('data-id', "<%== @today_goal %>")
}

$('.new-status-form').removeClass('editing')
